#!/bin/bash

host="$1"

{% for item in helper_host_aliases %}
if [[ "$host" == "{{ item['alias'] }}" ]]; then
    host="{{ item['host'] }}"
fi
{% endfor %}

env USE_TMUX=false USE_XONSH=false ssh -A -o SendEnv=USE_TMUX -o SendEnv=USE_XONSH -R{{ helper_gpg_remote_agent }}:{{ helper_gpg_local_agent }} "$host"
