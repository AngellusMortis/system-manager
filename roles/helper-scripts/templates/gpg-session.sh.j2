#!/bin/bash

### Helper script to access GPG Agent from Windows 10 inside of WSL

#####
## Autorun for the gpg-relay bridge
##
SOCAT_PID_FILE=$HOME/.misc/socat-gpg.pid

mkdir $HOME/.misc -p

if [[ -f $SOCAT_PID_FILE ]] && kill -0 $(cat $SOCAT_PID_FILE); then
   : # already running
else
    rm -f "$HOME/.gnupg/S.gpg-agent"
    (trap "rm $SOCAT_PID_FILE" EXIT; socat UNIX-LISTEN:"$HOME/.gnupg/S.gpg-agent,fork" EXEC:'{{ gpg_wsl_npiperelay_path }} -ei -ep -s -a "{{ windows_gpg_agent }}"',nofork </dev/null &>/dev/null) &
    echo $! >$SOCAT_PID_FILE
fi
