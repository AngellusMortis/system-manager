{
    "segments": {
        "left": [
            {
                "function": "powerline.segments.shell.cwd",
                "priority": 10,
                "args": {
                    "dir_shorten_len": 1,
                    "use_path_separator": true,
                    "dir_limit_depth": 20
                }
            },
            {
                "function": "powerline.segments.shell.last_status",
                "priority": 20
            }
        ],
        "right": [
            {
                "function": "powerline.segments.common.time.date",
                "priority": 10,
                "args": {
                    "istime": true,
                    "format": "%H:%M"
                }
            }
        ]
    }
}
